      text-align: center;
    }

    .login-container h3 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 20px;
      color: #0e75d6;
    }

    .login-container img {
      max-width: 120px;
      margin: 20px auto;
      display: block;
    }

    .social-btn {
      width: 100%;
      padding: 12px 16px;
      margin-bottom: 15px;
      border-radius: 10px;
      font-size: 17px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      font-weight: 500;
    }

    .social-btn.google {
      background: linear-gradient(135deg, #0e75d6 0%, #0a5cb8 100%);
      border: none;
      color: white;
      box-shadow: 0 4px 15px rgba(14, 117, 214, 0.3), 
                  inset 0 1px 0 rgba(255, 255, 255, 0.2),
                  inset 0 -1px 0 rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
      will-change: transform;
      transform: translateZ(0);
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .social-btn.google::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    @keyframes jelly {
      0%, 100% {
        transform: scale(1) translateY(0);
      }
      25% {
        transform: scale(1.05, 0.95) translateY(0);
      }
      50% {
        transform: scale(0.95, 1.05) translateY(-2px);
      }
      75% {
        transform: scale(1.02, 0.98) translateY(0);
      }
    }

    .social-btn.google:hover {
      background: linear-gradient(135deg, #0a5cb8 0%, #0e75d6 100%);
      animation: jelly 0.6s ease-in-out;
      box-shadow: 0 6px 20px rgba(14, 117, 214, 0.4),
                  inset 0 1px 0 rgba(255, 255, 255, 0.25),
                  inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    }

    .social-btn.google:hover::before {
      left: 100%;
    }

    .social-btn.google:active {
      transform: scale(0.98) translateY(0px);
      animation: none;
      box-shadow: 0 2px 10px rgba(14, 117, 214, 0.3),
                  inset 0 1px 0 rgba(255, 255, 255, 0.15),
                  inset 0 -1px 0 rgba(0, 0, 0, 0.15);
    }

    .social-btn.google:focus {
      outline: 3px solid rgba(14, 117, 214, 0.5);
      outline-offset: 2px;
    }

    .social-btn.google:focus:not(:focus-visible) {
      outline: none;
    }


    .login-footer {
