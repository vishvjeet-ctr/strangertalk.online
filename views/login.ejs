      font-weight: 600;
      cursor: pointer;
      color: #0e75d6;
      border: none;
      background: none;
      transition: opacity 0.3s ease;
      padding: 0;
    }

    .nav-link:hover {
      opacity: 0.8;
    }

    .menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 28px;
      color: #0e75d6;
      cursor: pointer;
      padding: 0;
    }

    .nav-menu {
      display: flex;
      gap: 60px;
    }

    .mobile-menu {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
