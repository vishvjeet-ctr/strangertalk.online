<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Login</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    body {
      background: #0d1117;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      font-family: system-ui, sans-serif;
      color: #fff;
      padding: 15px;
    }

    .login-card {
      width: 100%;
      max-width: 420px;
      padding: 35px 32px;
      background: #111827;
      border-radius: 14px;
      box-shadow: 0 0 35px rgba(0,0,0,0.35);
      border: 1px solid #1f2937;
    }

    .login-card h2 {
      text-align: center;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .login-card p {
      text-align: center;
      margin-bottom: 25px;
      font-size: 14px;
      color: #9ca3af;
    }

    .form-control {
      background: #0d1117 !important;
      color: #fff !important;
      border: 1px solid #374151 !important;
      border-radius: 10px;
      padding: 12px;
    }

    .input-group-text {
      background: #0d1117;
      border: 1px solid #374151;
      cursor: pointer;
      color: #9ca3af;
    }

    .input-group-text:hover {
      color: #fff;
    }

    .form-control:focus {
      border-color: #3b82f6 !important;
      box-shadow: 0 0 0 3px rgba(59,130,246,.35) !important;
    }

    .btn-primary {
      padding: 12px;
      border-radius: 10px;
      font-weight: 500;
      background: #2563eb;
      border: none;
    }

    .btn-primary:hover {
      background: #1d4ed8;
    }

    .signup-link {
      text-align: center;
      margin-top: 18px;
      font-size: 14px;
    }

    .signup-link a {
      color: #60a5fa;
      text-decoration: none;
    }

    .signup-link a:hover {
      text-decoration: underline;
    }

    .forgot-link {
      display: block;
      text-align: right;
      font-size: 14px;
      margin-top: 6px;
    }

    .forgot-link a {
      color: #60a5fa;
      text-decoration: none;
    }

    .forgot-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="login-card">
    <h2>Welcome Back</h2>
    <p>Sign in to continue</p>

    <!-- ‚úÖ ERROR ALERT UI (optional) -->
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center py-2"><%= error %></div>
    <% } %>

    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
      </div>

      <div class="mb-2">
        <label class="form-label">Password</label>
        <div class="input-group">
          <input type="password" name="password" id="passwordField" class="form-control" placeholder="Enter your password" required>
          <span class="input-group-text" id="togglePassword">üëÅÔ∏è</span>
        </div>

        <!-- ‚úÖ Forgot password link -->
        <div class="forgot-link">
          <a href="/forgot-password">Forgot password?</a>
        </div>
      </div>

      <button id="login" type="submit" class="btn btn-primary w-100 mt-3">Login</button>

      <div class="signup-link">
        Don't have an account?
        <a href="/register">Register</a>
      </div>
    </form>
  </div>

  <!-- ‚úÖ Password Show/Hide JS -->
  <script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordField = document.getElementById("passwordField");

    togglePassword.addEventListener("click", () => {
      const type = passwordField.type === "password" ? "text" : "password";
      passwordField.type = type;
      togglePassword.textContent = type === "password" ? "üëÅÔ∏è" : "üôà";
    });
  </script>
</body>
</html>
